<div class="container">
    <h1>Business Contacts List</h1>

    <div class="row">
        <div class="col">

           
    
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Contact Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email Address</th>
                        <th scope="col">More</th>
                        <th scope="col">More</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="BusinessContactsList">
                    <!-- Repeatable Rows -->
                    <% for(let count = 0; count < contacts.length; count++) { %>
                        <tr>
                            <th scope="row" class="text-center"><%= count + 1 %></th>
                            <td><%= contact[count].Contact Name %></td>
                            <td><%= contact[count].Contact Number %></td>
                            <td><%= contact[count].Email Address %></td>
                            <td class="text-center"><a href="/update/<%=contacts[count]._id %>" class="btn btn-primary btn-sm update">< i class="fa-solid fa-pen-to-square"></i>Update</a></td>
                            <td class="text-center"><a href="/delete/<%=contacts[count]._id %>" class="btn btn-danger btn-sm delete">< i class="fa-solid fa-trash-can"></i>Update</a></td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

